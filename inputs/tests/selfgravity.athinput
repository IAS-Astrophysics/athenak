# AthenaXXX input file for Hydro advection tests

<comment>
problem   = SelfGravity 

<job>
basename  = MGGravityTest    # basename of output filenames, serves as problem ID

<mesh>
nghost    = 3         # Number of ghost cells
nx1       = 128       # Number of cells in X1-direction
x1min     = 0.0      # minimum value of X1
x1max     = 1.0       # maximum value of X1
ix1_bc    = periodic  # Inner-X1 boundary condition flag
ox1_bc    = periodic  # Outer-X1 boundary condition flag

nx2       = 128         # Number of cells in X2-direction
x2min     = 0.0      # minimum value of X2
x2max     = 1.0       # maximum value of X2
ix2_bc    = periodic  # Inner-X1 boundary condition flag
ox2_bc    = periodic  # Outer-X1 boundary condition flag

nx3       = 128         # Number of cells in X3-direction
x3min     = 0.0      # minimum value of X3
x3max     = 1.0       # maximum value of X3
ix3_bc    = periodic  # Inner-X3 boundary condition flag
ox3_bc    = periodic  # Outer-X3 boundary condition flag

<meshblock>
nx1       = 64       # Number of cells in each MeshBlock, X1-dir
nx2       = 64         # Number of cells in each MeshBlock, X2-dir
nx3       = 64        # Number of cells in each MeshBlock, X3-dir

<time>
evolution  = dynamic # dynamic/kinematic/static
integrator = rk2       # time integrator
cfl_number = 0.2       # The Courant, Friedrichs, & Lewy (CFL) Number
nlim       = 1       # cycle limit (no limit if <0)
tlim       = 1.0       # time limit
ndiag      = 1         # cycles between diagostic output

<hydro>
eos         = isothermal  # EOS type
reconstruct = plm        # spatial reconstruction method
rsolver     = llf      # Riemann-solver to be used
gamma       = 1.4
iso_sound_speed = 1.0

<gravity>
four_pi_G = 1.0
threshold = 1e-8
niteration = 1
npresmooth = 1
npostsmooth = 1
full_multigrid = true
fmg_ncycle = 1

<hydro_srcterms>
self_gravity = true

<problem>
pgen_name   = gravity   # problem generator name