<comment>
problem = single zone test

<job>
basename = singlezone  # name of run

<time>
evolution  = dynamic  # dynamic/kinematic/static
integrator = rk2      # time integration algorithm
cfl_number = 0.3      # The Courant, Friedrichs, & Lewy (CFL) Number
nlim       = -1       # cycle limit
tlim       = 100.0     # time limit

<mesh>
nghost = 2           # Number of ghost cells
nx1    = 5         # Number of zones in X1-direction
x1min  = -5      # minimum value of X1
x1max  = 5      # maximum value of X1
ix1_bc = periodic  # inner-X1 boundary flag
ox1_bc = periodic  # outer-X1 boundary flag

nx2    = 1         # Number of zones in X2-direction
x2min  = -0.5       # minimum value of X2
x2max  = 0.5      # maximum value of X2
ix2_bc = periodic  # inner-X2 boundary flag
ox2_bc = periodic  # outer-X2 boundary flag

nx3    = 1         # Number of zones in X3-direction
x3min  = -0.5      # minimum value of X3
x3max  = 0.5       # maximum value of X3
ix3_bc = periodic  # inner-X3 boundary flag
ox3_bc = periodic  # outer-X3 boundary flag

<meshblock>
nx1       = 5          # Number of cells in each MeshBlock, X1-dir
nx2       = 1            # Number of cells in each MeshBlock, X2-dir
nx3       = 1           # Number of cells in each MeshBlock, X3-dir

<adm>
# This needs to be here

<mhd>
nscalars    = 1
eos         = ideal     # EOS type
dyn_eos     = compose     # EOS type
table       = /home/bernuzzi/Codes/athenak/eos/DD2.athtab
#table       = /home/bernuzzi/Codes/athenak/eos/SFHo.athtab
dyn_error   = reset_floor # error policy
reconstruct = dc      # spatial reconstruction method
rsolver     = hlle      # Riemann solver to be used
dfloor      = 1.0e-16   # floor on density rho
tfloor      = 1.0e-14   
dthreshold  = 1.02      # Threshold for flooring
gamma       = 2.0       # ratio of specific heats Gamma
dyn_scratch = 1
fofc        = false
enforce_maximum = false

<coord>
general_rel = true      # general relativity
m           = 1.0
a           = 0.0
excise      = false

<radiation_m1>
closure_fun = minerbo
src_update = implicit
opacity_type = bns-nurates
#opacity_one_dt = true # default: false

gr_sources = false # default: true
matter_sources = true # default: false
backreact = false # false

#theta_limiter = true # default: false

<bns_nurates>
use_inelastic_scatt = false
use_WM_ab = false
use_WM_sc = false
use_NN_medium_corr = false

use_dU = false
use_dm_eff = false

use_equilibrium_distribution = true # default: false 
use_kirchoff_law = false # default: false 

<problem>
pgen_name = rad_m1_singlezonetest
rho = 1e-7  # initial density [code]
temp = 50.0 # initial temperature [code, MeV]
vx = 0.0    # x velocity
vy = 0.0    # y velocity
vz = 0.0    # z velocity
Y_e = 0.1   # electron fraction

<output1>
file_type   = tab         # Binary data dump
variable    = mhd_w       # Primitive variables
dt          = 1.0

<output2>
file_type   = tab        # output format
variable    = rad_m1_E    # choice of variables to output
dt          = 0.1       # output cadence

<output3>
file_type   = tab        # output format
variable    = rad_m1_eta_1    # choice of variables to output
dt          = 0.1        # output cadence

