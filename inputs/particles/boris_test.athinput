# AthenaXXX input file for random particle drift

<comment>
problem   = MagnetizedParticles_Test 

<job>
basename  = boris_test       # problem ID: basename of output filenames

<mesh>
nghost    = 2         # Number of ghost cells
nx1       = 64       # Number of zones in X1-direction
x1max     = 0.5      # maximum value of X1
x1min     = -0.5       # maximum value of X1
ix1_bc    = periodic  # Inner-X1 boundary condition flag
ox1_bc    = periodic  # Outer-X1 boundary condition flag

nx2       = 64       # Number of zones in X2-direction
x2max     = 0.5      # maximum value of X2
x2min     = -0.5       # maximum value of X2
ix2_bc    = periodic  # Inner-X2 boundary condition flag
ox2_bc    = periodic  # Outer-X2 boundary condition flag

nx3       = 64       # Number of zones in X3-direction
x3max     = 0.5      # maximum value of X3
x3min     = -0.5       # maximum value of X3
ix3_bc    = periodic  # Inner-X3 boundary condition flag
ox3_bc    = periodic  # Outer-X3 boundary condition flag

<meshblock>
nx1       = 32       # Number of cells in each MeshBlock, X1-dir
nx2       = 32       # Number of cells in each MeshBlock, X2-dir
nx3       = 32       # Number of cells in each MeshBlock, X3-dir

<time>
evolution  = dynamic   # dynamic/kinematic/static
integrator = rk2       # time integration algorithm
cfl_number = 0.9       # The Courant, Friedrichs, & Lewy (CFL) Number
nlim       = -1        # cycle limit
tlim       = 100.0      # time limit
ndiag      = 10        # cycles between diagostic output

<particles>
ppc    = 0.1
pusher = boris
particle_type = cosmic_ray
mass = 1.0E+0
charge = 1.0E+0

<mhd>
eos         = ideal     # EOS type
reconstruct = plm      # spatial reconstruction method
rsolver     = hlld      # Riemann-solver to be used
gamma       = 1.6666667 # gamma = C_p/C_v

<problem>
max_init_vel = 0.1
b0_strength = 1.0
user_hist = true

<output1>
file_type   = pvtk      # Particle VTK data dump
variable    = prtcl_all
dt          = 1.0E-1     # time increment between outputs

<output2>
file_type   = bin      # Particle VTK data dump
variable    = mhd_w_bcc
dt          = 5.0E+1     # time increment between outputs

<output3>
file_type   = hst      # Particle VTK data dump
user_hist_only    = true
dt          = 1.0E-1     # time increment between outputs
